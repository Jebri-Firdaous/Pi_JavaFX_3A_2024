<AnchorPane prefHeight="540.0" prefWidth="844.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.gestionShopping.ModifierArticleController">
   <children>
   
       <Label layoutX="294.0" layoutY="30.0" text="Modifier Article" textFill="#57c0dd">
         <font>
            <Font name="Arial Bold" size="40.0" />
         </font>
      </Label>
       <Label layoutX="221.0" layoutY="115.0" text="Nom :">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
       <TextField fx:id="nomArticleTextField" layoutX="349.0" layoutY="112.0" prefHeight="31.0" prefWidth="252.0" promptText="Nom de l'article" />
       <Label layoutX="221.0" layoutY="157.0" text="Prix :">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
       <TextField fx:id="prixArticleTextField" layoutX="349.0" layoutY="154.0" prefHeight="31.0" prefWidth="252.0" promptText="Prix de l'article" />
       <Label layoutX="221.0" layoutY="199.0" text="Quantité :">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
       <TextField fx:id="quantiteArticleTextField" layoutX="349.0" layoutY="196.0" prefHeight="31.0" prefWidth="252.0" promptText="Quantité de l'article" />
   
       <!-- Champ pour le type d'article -->
       <Label layoutX="221.0" layoutY="241.0" text="Type :">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
       <ComboBox fx:id="typeArticleCB" layoutX="350.0" layoutY="239.0" prefHeight="31.0" prefWidth="252.0" promptText="Type de l'article" style="-fx-background-color: transparant; -fx-border-color: grey;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

       <!-- Champ pour la description d'article -->
       <Label layoutX="221.0" layoutY="285.0" text="Description :">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
       <TextField fx:id="descriptionArticleTextField" layoutX="349.0" layoutY="282.0" prefHeight="31.0" prefWidth="252.0" promptText="Description" />
   
       <!-- Champ pour la photo d'article -->
       <Label layoutX="221.0" layoutY="329.0" text="Photo :">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
       <TextField fx:id="photoArticleTextField" layoutX="349.0" layoutY="326.0" prefHeight="31.0" prefWidth="252.0" />
   
       <!-- Bouton pour modifier la photo de l'article -->
       <Button fx:id="modifierPhotoButton" layoutX="349.0" layoutY="380.0" onAction="#modifierPhotoArticle" prefHeight="31.0" prefWidth="252.0" style="-fx-font-family: Arial; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-color: #2196F3;" styleClass="insert-photo-button" text="Modifier Photo" />
   
       <!-- Bouton pour modifier l'article -->
       <Button fx:id="modifierButton" layoutX="415.0" layoutY="464.0" onAction="#modifierArticle" prefHeight="31.0" prefWidth="122.0" style="-fx-background-color: #57c0dd; -fx-border-radius: 12; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: Arial; -fx-text-fill: white;" text="Modifier" />
      <ImageView fitHeight="179.0" fitWidth="200.0" layoutX="28.0" layoutY="342.0">
         <image>
            <Image url="@Modifier.png" />
         </image>
      </ImageView>
      <Label fx:id="labeldisconnect" text="Label" visible="false" />
   </children>

</AnchorPane>
